@{
    var isLoginPage = ViewContext.RouteData.Values["controller"]?.ToString() == "Auth"
                   && ViewContext.RouteData.Values["action"]?.ToString() == "LoginForm";

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Ticket System</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar (login sayfasında gösterilmez) -->
        @if (!isLoginPage)
        {
            <div class="border-end bg-white" id="sidebar-wrapper">
                <div class="sidebar-heading border-bottom bg-light">Ticket System</div>
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 @(currentController == "Home" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">Home Page</a>

                    <a class="list-group-item list-group-item-action list-group-item-light p-3 @(currentController == "Tickets" ? "active" : "")"
                       asp-controller="Tickets" asp-action="Index">Tickets</a>

                    <a class="list-group-item list-group-item-action list-group-item-light p-3 @(currentController == "Users" ? "active" : "")"
                       asp-controller="Users" asp-action="Index">Users</a>
                </div>
            </div>
        }

        <!-- Page content wrapper -->
        <div id="page-content-wrapper">
            <!-- Navbar (login sayfasında gösterilmez) -->



            @if (!isLoginPage)
            {
                <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <div class="container-fluid">
                        <!-- Buraya logout butonu veya kullanıcı adı da eklenebilir -->
                        <span class="navbar-text ms-auto me-2">Giriş Yapıldı</span>
                    </div>
                </nav>
            }

            <!-- Main content -->
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>

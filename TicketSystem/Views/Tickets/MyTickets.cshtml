@model IEnumerable<TicketSystem.Models.Ticket>

<h2>Benim Ticketlarım</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>Oluşturulma</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Title</td>
                <td>@ticket.Description</td>
                <td>@ticket.Status</td>
                <td>@ticket.CreatedDate.ToString("dd.MM.yyyy")</td>
            </tr>
        }
    </tbody>
</table>
